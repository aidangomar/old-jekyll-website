<script>
$(document)
    .ready(function() {
    $("#display").height(450);
    $("#display").width(520);
    checkMobile();
    $("#display")
        .append('<center><div id="navbar"><hr id="stop"><ul class="nav nav-pills"><li id="homeButton"><a href="#">Home</a></li><li><a href="#aboutModal" data-toggle="modal">Education</a></li><li><a href="#appModal" data-toggle="modal">Experience</a></li><li><a href="#projModal" data-toggle="modal">Publications</a></li><li><a href="#expModal" data-toggle="modal">Grants</a></li><li><a href="#serviceModal" data-toggle="modal">Service</a></li><li><a href="#twitterModal" data-toggle="modal">Recent Chirps</a></li><li><a href="#contactModal" data-toggle="modal">Acknowledgements</a></li></ul></div></center>');
    //setInterval(update, 50);
    //setInterval(checkMobile, 50);
    //$("#navbar").hide();
    //$(".well").hide();
});

$(window).resize(function() {
  checkMobile();
});

function checkMobile() {
    if ($(document).width() < 600) {
    $("#display").addClass("mobile");
    $("#profilePic").height(200);
    $("#display").height($(window).height()-50);
    $("#display").width($(window).width() - 50);
                    //$("#display").width($(window).width());
  } else {
    $("#profilePic").height(250);
    $("#display").height(450);
    $("#display").width(520);
  $("#display").removeClass("mobile");
  }
}
</script>
